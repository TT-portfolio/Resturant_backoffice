{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "types": [
      "jest",
      "@types/jest",
      "@jest/globals",
      "@testing-library/jest-dom",
      "cypress"
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "jest.config.ts",
    "jest.d.ts",
    "jest.setup.ts",
    "next-env.d.ts",
    "src/__tests__/**/*.ts",
    ".next/types/**/*.ts"
, "scripts/generate-test-jwt.mts"  ],
  "exclude": [
    "./cypress.config.ts",
    "node_modules",
    "cypress",
    "**/*.cy.tsx"
  ]
}
